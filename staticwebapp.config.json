{
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "ciam": {
          "registration": {
            "clientIdSettingName": "CIAM_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "CIAM_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://globalsecuritycommunity.ciamlogin.com/c812121a-18f7-492e-a9a9-66fd73d522f7/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "name",
            "scopes": ["openid", "profile", "email"]
          }
        }
      }
    },
    "rolesSource": "/api/roles"
  },
  "routes": [
    {
      "route": "/css/*",
      "headers": { "Cache-Control": "public, max-age=86400, must-revalidate" }
    },
    {
      "route": "/js/*",
      "headers": { "Cache-Control": "public, max-age=86400, must-revalidate" }
    },
    {
      "route": "/assets/*",
      "headers": { "Cache-Control": "public, max-age=604800, must-revalidate" }
    },
    {
      "route": "/dashboard/*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/scanner/*",
      "allowedRoles": ["admin", "volunteer"]
    },
    {
      "route": "/register/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/my-tickets/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/createEvent",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/checkIn",
      "allowedRoles": ["admin", "volunteer"]
    },
    {
      "route": "/api/issueBadges",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/eventAttendance",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/updateRegistrationRole",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/adminRegister",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/updateChapter",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/getChapter",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/registerEvent",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/cancelRegistration",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/myTickets",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/badge",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*",
      "/css/*",
      "/js/*",
      "/assets/*",
      "/api/*",
      "/manifest.json",
      "/sw.js"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/ciam",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/index.html"
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "0",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "camera=(self), microphone=()",
    "Cross-Origin-Opener-Policy": "same-origin",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Cache-Control": "public, max-age=300, must-revalidate",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' https://unpkg.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://www.gravatar.com https://gravatar.com https://*.wp.com https://sessionize.com https://cache.sessionize.com; connect-src 'self' https://sessionize.com; worker-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://globalsecuritycommunity.ciamlogin.com"
  }
}
